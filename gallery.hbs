{{!< default}}

{{#tag}}
<div class="ri-outer">
	<h1 class="single-title center">{{description}}</h1>
</div>
{{/tag}}

 {{#if posts}}
        <div class="ri-outer loop-section infinite">
            <div class="loop-subtitle global-title-wrap">
                <h3 class="global-title-large text-center">{{title}}</h3>
            </div>
            <div class="loop-wrap">
                {{#foreach posts}}
                {{>ri-item show_tags=true show_author=true}}
                {{/foreach}}
            </div>
        </div>
        {{pagination}}
{{/if}}

{{> "quotes"}}

<script>
    if(typeof quotesList!='undefined' && quotesList.length>0){
        const randomQuote = quotesList[Math.floor(Math.random() * quotesList.length)];

        document.querySelectorAll('.loop-wrap').forEach(item => {
            let quote = document.createElement('div');
				quote.className = 'quotes-container';
			quote.innerHTML = `<span class="quote">${quotesList[Math.floor(Math.random() * quotesList.length)]}</span>`;
            item.after(quote);
        });
    }
</script>